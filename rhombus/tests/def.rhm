#lang rhombus

block:
  def π = 3.14
  check:
    π
    ~is 3.14
  check:
    def (((ππ))) = π * π
    ππ
    ~is math.expt(3.14, 2)

check:
  def (ma, mb, mc):
    values("1", "2", "3")
  [ma, mb, mc]
  ~is ["1", "2", "3"]

check:
  def values(ma, mb, mc):
    values("1", "2", "3")
  [ma, mb, mc]
  ~is ["1", "2", "3"]

check:
  def values(x, [y, ...]): values(0, [1, 2, 3])
  [y, ..., x]
  ~is [1, 2, 3, 0]

check:
  ~eval
  def x where x = 1 = 2
  ~throws "multiple immediate equals not allowed in this group"

check:
  ~eval
  def | x = 2
  ~throws "alternatives are not supported here"
